<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/fragmentSuperior"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentSuperior"
            android:name="com.example.fragmentosdinamicos.FragmentoArriba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_fragmento_arriba" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentInferior"
            android:name="com.example.fragmentosdinamicos.FragmentoPrincipal"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            tools:layout="@layout/fragment_fragmento_principal" />
    </FrameLayout>
</LinearLayout>