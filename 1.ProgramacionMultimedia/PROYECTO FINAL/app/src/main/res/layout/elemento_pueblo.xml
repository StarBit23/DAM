<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="#DC79F3">


        <ImageView
            android:id="@+id/imagen_pueblo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/imgcabecera" />

        <TextView
            android:id="@+id/texto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del juego"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imagen_pueblo"
            app:layout_constraintTop_toTopOf="@+id/imagen_pueblo" />

        <TextView
            android:id="@+id/texto_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="pequeña descripción"
            app:layout_constraintStart_toStartOf="@+id/texto_nombre"
            app:layout_constraintTop_toBottomOf="@+id/texto_nombre" />

        <ImageView
            android:id="@+id/imageViewHabitantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imagen_pueblo"
            app:layout_constraintStart_toEndOf="@+id/imagen_pueblo"
            app:layout_constraintTop_toBottomOf="@+id/texto_descripcion"
            app:srcCompat="@drawable/ic_baseline_supervisor_account_24" />

        <TextView
            android:id="@+id/texto_numerohabitantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="1000 ventas"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHabitantes"
            app:layout_constraintStart_toEndOf="@+id/imageViewHabitantes"
            app:layout_constraintTop_toTopOf="@+id/imageViewHabitantes" />

        <ImageView
            android:id="@+id/imagen_editar"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.181"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/imageView_borrar_pueblo"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen_editar"
            app:srcCompat="@drawable/ic_baseline_delete_forever_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>